
    <div class="field">
        <%= f.label :name, "Nom*" %> <br />
        <%= f.text_field :name %> 
    </div>
    
    <div class="field">
        <%= f.label :surname, "Prénom*" %> <br />
        <%= f.text_field :surname %>
    </div>
     
<% if session[:render_tutor] %> 
    <div class="field">
        <%= f.label :gender, "Sexe*" %> <br />
        <%= f.select :gender, ["M","F"], :include_blank => true %> 
    </div>
<% end %> 

    <div class="field">
        <%= f.label :birthday, "Date de Naissance" %> <br />
        <%= f.date_select :birthday, :order => [:day, :month, :year], :start_year => 1990, :use_month_numbers => true, :include_blank => true %> <br />
    </div>
    
    <div class="field">
        <%= f.label :cell_phone_number, "Téléphone Portable" %> <br />
        <%= f.telephone_field :cell_phone_number %>
    
    <div class="field">
        <%= f.label :email, "E-Mail" %> <br />
        <%= f.text_field :email %>
    </div>
    
    <%= fields_for :address do |builder| %>
	    <div class="field">
			<%= builder.label :address, "Adresse" %> <br />
			<%= builder.text_area :address %>
	    </div>
	
		<div class="field">
			<%= builder.label :phone_number, "Téléphone Fixe" %> <br />
			<%= builder.telephone_field :phone_number %>
		</div>
	<% end %>
    
    
   <div class="actions">
	    <%= f.submit "Précédent", :name => "previous_button" %>
	    <%= f.submit "Suivant", :name => "next_button" %>
   </div>
