<tr>
<td>
    <%= user.username %>
</td>
<td>
    <%= user.name %>
</td>

<td>
    <% if user.admin? %> 
      Administrateur
    <% else %>
      Utilisateur
    <% end %> 
</td>
<td>
    <% if (!current_user?(user) and !current_user.nil? and current_user.admin?) %>
       <%= form_for(:bascule, :url => users_path)  do |f| %>
           <div class="actions">
                <%= f.hidden_field :b_user_id, :value => "#{user.id}" %>
                <%= f.submit "Basculer" %>
           </div>
       <% end %> 
    <% end %> 
</td>

<td>
    <% if (!current_user?(user) and !current_user.nil? and current_user.admin?) %>
        <%= link_to "supprimer", user, :method => :delete, :confirm => "Etes-vous certain?", :title => "Supprimer #{user.username}" %>
    <% end %>
</td>
</tr>
