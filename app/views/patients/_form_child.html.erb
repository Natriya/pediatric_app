<%= form_for(@patient) do |f| %>
   <%= f.error_messages %>
  
  <h2>Patient</h2>
  <div class="field">
    <%= f.label :name, "Nom*" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :surname, "PrÃ©nom*" %><br />
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.label :gender, "Sexe*" %><br />
    <%= f.select :gender, ["M","F"], :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :birthday, "Date de Naissance" %><br />
    <%= f.date_select :birthday, :order => [:day, :month, :year], :start_year => 1990, :use_month_numbers => true, :include_blank => true %>
  </div>
  
  <div class="field">
     <%= f.label :company_patient_identification, "Matricule" %> <br />
     <%= f.text_field :company_patient_identification %>
   </div>

   <br /> <br />
   <div class="actions">  
	  <%= f.submit "Suivant", :name => "next_button", :class => "button" %>
   </div>
<% end %>
